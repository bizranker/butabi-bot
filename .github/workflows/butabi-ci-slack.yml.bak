name: Butabi CI Slack Notifier

on:
  workflow_call:
    inputs:
      commit:
        required: true
        type: string
      message:
        required: true
        type: string

jobs:
  notify-push:
    runs-on: ubuntu-latest
    steps:
      - name: ðŸ§  Extract Git metadata
        id: vars
        run: |
          echo "actor=${{ github.actor }}" >> $GITHUB_OUTPUT
          echo "commit_msg=$(git log -1 --pretty=%B)" >> $GITHUB_OUTPUT
          echo "commit_sha=$(git rev-parse --short HEAD)" >> $GITHUB_OUTPUT

      - name: ðŸŽ­ Pick a comedy quote
        id: quote
        run: |
          QUOTES=(
            "What is love? Baby donâ€™t merge me!"
            "Are you not entertained... by this push?!"
            "Smokinâ€™! ðŸ”¥ The Mask"
            "Iâ€™m a peacock, you gotta let me deploy! ðŸ¦š The Other Guys"
            "If you build it, they will ship. ðŸ›³ï¸ Field of DevOps"
          )
          RANDOM_INDEX=$((RANDOM % ${#QUOTES[@]}))
          echo "random_quote=${QUOTES[$RANDOM_INDEX]}" >> $GITHUB_OUTPUT

      - name: ðŸ“£ Send Slack message
        uses: slackapi/slack-github-action@v1.24.0
        with:
          payload: |
            {
              "text": "*ðŸ”” ${{ steps.vars.outputs.actor }}* pushed a commit to *main*!

*Commit:* `${{ inputs.commit }}`
*Message:* `${{ inputs.message }}`
            }
        env:
          SLACK_WEBHOOK_URL: ${{ secrets.BUTABIBOT_WEBHOOK }}
